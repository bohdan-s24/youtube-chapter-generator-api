{
  "manifest_version": 3,
  "name": "YouTube Chapter Generator",
  "version": "1.0",
  "description": "Generate catchy YouTube chapter titles with timestamps using AI",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube-chapter-generator-api.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}    ├── extension/
│   ├── src/
│   │   ├── popup.js
│   │   ├── popup.html
│   │   ├── popup.css
│   │   ├── content.js
│   │   └── background.js
│   ├── public/
│   │   ├── manifest.json
│   │   └── icons/
│   └── scripts/
│       └── package-extension.js
├── pages/
│   └── api/
│       └── generate-chapters.js
├── package.json
